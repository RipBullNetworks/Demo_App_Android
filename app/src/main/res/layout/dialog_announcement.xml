<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/announcement_dialog_bg"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAnnouncementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:drawableStart="@drawable/ic_announcement"
        android:drawablePadding="@dimen/dp10"
        android:fontFamily="@font/sf_pro_display_semi_bold"
        android:paddingTop="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:text="All Users"
        android:textColor="@color/channel_content_color"
        android:textSize="@dimen/sp16"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_display_regular"
        android:maxLines="4"
        android:paddingStart="44dp"
        android:paddingTop="@dimen/dp2"
        android:paddingEnd="25dp"
        android:paddingBottom="@dimen/dp5"
        android:textColor="@color/channel_content_color"
        android:textSize="@dimen/sp16"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Est augue at sagittis aenean accumsan. Sed in vitae sed at dis. Eget pharetra, ipsum, diam sit aenean ac. Imperdiet accumsan arcu egestas risus duis a faucibus eleifend pulvinar. Sed id a sagittis, suscipit. Pharetra vehicula sit laoreet ultricies sollicitudin ornare et diam nullam. Sagittis tristique viverra malesuada lacus, euismod senectus cras vitae. Cursus nullam quis pretium"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvViewFullAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semi_bold"
        android:paddingStart="44dp"
        android:text="@string/view_full_announcement"
        android:textColor="@color/colorPrimaryButton"
        android:textSize="@dimen/sp14"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semi_bold"
        android:paddingStart="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp25"
        android:paddingBottom="@dimen/dp10"
        android:text="@string/dismiss"
        android:layout_gravity="end"
        android:textColor="@color/channel_content_color"
        android:textSize="@dimen/sp16"
        />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
