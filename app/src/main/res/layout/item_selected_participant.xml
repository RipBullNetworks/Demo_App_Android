<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp5"
    >

  <com.ripbull.ertc.components.AvatarImageView
      android:id="@+id/ivParticipantDP"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:cropToPadding="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:foreground="@drawable/ic_contact_photo_background"
      tools:src="@color/blue_600"
      />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivRemoveUser"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_remove_user"
      app:layout_constraintEnd_toEndOf="@+id/ivParticipantDP"
      app:layout_constraintTop_toTopOf="@+id/ivParticipantDP"/>

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvParticipantName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="marquee"
      android:fontFamily="@font/sf_pro_display_regular"
      android:maxLength="10"
      android:padding="@dimen/dp2"
      android:singleLine="true"
      android:textColor="#DE000000"
      android:textSize="@dimen/app_text_size_medium"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivParticipantDP"
      tools:text="Frieeeeeeedrich Nieeeeeeeeeetzsche"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
