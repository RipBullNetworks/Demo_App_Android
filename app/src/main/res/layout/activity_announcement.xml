<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background_color"
    >

  <include layout="@layout/all_toolbar_dark" />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvAnnouncementTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp10"
      android:drawableStart="@drawable/ic_small_announcement"
      android:drawablePadding="@dimen/dp10"
      android:fontFamily="@font/sf_pro_display_semi_bold"
      android:padding="@dimen/dp10"
      android:text="All Users"
      android:textColor="@color/channel_content_color"
      android:textSize="@dimen/sp16"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:scrollbars="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvAnnouncementTitle"
      >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:paddingStart="39dp"
        android:paddingEnd="20dp"
        android:paddingBottom="@dimen/dp10"
        android:textColor="@color/channel_content_color"
        android:textSize="@dimen/sp16"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Est augue at sagittis aenean accumsan. Sed in vitae sed at dis. Eget pharetra, ipsum, diam sit aenean ac. Imperdiet accumsan arcu egestas risus duis a faucibus eleifend pulvinar. Sed id a sagittis, suscipit. Pharetra vehicula sit laoreet ultricies sollicitudin ornare et diam nullam. Sagittis tristique viverra malesuada lacus, euismod senectus cras vitae. Cursus nullam quis pretium id. Urna, est id semper augue sit faucibus nulla mauris. Arcu non quis ac et ut viverra egestas in arcu. Aenean facilisi rhoncus scelerisque risus amet massa, volutpat faucibus. Tellus purus eget nunc, sagittis, feugiat. Vulputate lacinia nullam amet, scelerisque sed eget massa elit. Non ut."
        />
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
